<% content_for(:javascript) do %>
	<%= javascript_include_tag 'views/grupos/item_contato' %>
<% end %>

<h1 class="item_grupos">
	<span>
		<% link_to users_grupos_url do %>
			<%= t "app.menu.grupos" %>
		<% end %>
	</span>
	<span class="divisor">&raquo;</span>
	<span><%= t "app.grupo.visualizar" %></span>
</h1>

<div class="grupo_box round">
	<div class="nome">
		<span class="label"><%= t ("activerecord.attributes.grupo.nome") %>:</span>
		<br/>
		<%= @grupo.nome %>
	</div>          
	<br/>
	<div class="periodo inicio">
		<span class="label"><%= t ("app.enviar") %>:</span>
		<br/>
		
		<%= @grupo.periodicidade_formatado %>
		<span class="divisor">&raquo;</span>
		<%= @grupo.inicio_formatado %>
	</div>
	<br/>
	<div class="mensagem">
		<span class="label"><%= t ("activerecord.attributes.grupo.mensagem") %>:</span>
		<br/>
		<%= @grupo.mensagem %>
	</div>
	<br/>                                          
	<% if @grupo.contatos.length > 0 %>
	<div id="nomes_container" class="contatos">
		<span class="label"><%= t ("app.menu.contatos") %>:</span>
		<br/>
		<%= render :partial => 'users/grupos/item_contato', :collection => @grupo.contatos, :locals => {:grupo => @grupo} %>
	</div>                           
	<% end %>
</div>